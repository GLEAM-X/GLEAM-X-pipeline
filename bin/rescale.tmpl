#!/bin/bash -l
#SBATCH --account=ACCOUNT
#SBATCH --partition=workq
#SBATCH --time=05:00:00
#SBATCH --nodes=1
#SBATCH --array=0-4

source /group/mwasci/$SLURM_JOB_USER/GLEAM-X-pipeline/GLEAM-X-pipeline.profile

set -x

base=BASEDIR
obslist=OBSLIST
readfile=READ

if [[ -z $readfile ]]
then
    write="--write"
fi

subchans=(0000 0001 0002 0003 MFS)
subchan=${subchans[$SLURM_ARRAY_TASK_ID]}

cd ${base}

obslist=`cat $obslist`

sublist=${obslist%.txt}_${subchan}.txt

if [[ -e $sublist ]]
then
    rm $sublist
fi

for file in ${obslist}
do
    if [[ -e ${file}/${file}_deep-${subchan}-image-pb_warp.fits ]]
    then
        echo ${file}/${file}_deep-${subchan}-image-pb_warp.fits >> ${sublist}
    fi
done

python /group/mwasci/${SLURM_JOB_USER}/GLEAM-X-pipeline/bin/polyfit_snapshots.py \
               --filelist ${sublist} \
               --skymodel=/group/mwasci/${SLURM_JOB_USER}/GLEAM-X-pipeline/models/skymodel_only_alpha_sparse_unresolved.fits \
               $readfile $write --rescale --correctall --overwrite --plot
