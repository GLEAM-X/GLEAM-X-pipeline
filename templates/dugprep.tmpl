asvo_flag=ASVOFLAG
tres=TRES
fres=FRES

echo ${GXUSER}
cd $basedir

# -----------------------------------------------------------------------------
# LOAD MODULES
# -----------------------------------------------------------------------------
module load rclone 
# Shouldn't need to reload singularity since running the login and don't want to reset and of hte bindpaths etc 
# module load singularity 

# -----------------------------------------------------------------------------
# DOWNLOAD FROM ACACIA
# -----------------------------------------------------------------------------
# NOTE: CURRENTLY ASSUMES JOBS ARE ALL READY TO GO, MAYBE ADD OPTION SOMEWHERE FOR SUBMITTING JOBS AND CHECKING ON THEM 

if [[ -z ${asvo_flag} ]]
then 
    rclone copy -P --include "*.tar" ${GXACACIA}:${acacia}/ ${basedir}/
else
    # IF YOU NEED TO ACTUALLY SUBMIT THE JOBS UNCOMMENT! 
    # export params="output=ms,flag_edge_width=80,avg_time_res=${tres},avg_freq_res=${fres}"
    # singularity run $GXCONTAINER giant-squid submit-conv --parameters=$params ${obslist}
    
    # get list of ready ones: 
    singularity run ${GXCONTAINER} giant-squid list --states ready ${obslist} | cut -d "|" -f 3 | tail -n +4  | head -n -1 > ready_for_download.txt
    list=()
    list=$(cat "ready_for_download.txt")
    for obs in $list
    do
        cd $basedir
        obsfile=$(echo "${obs}_"[0-9]*".tar")
        if [[ -d $obs ]]
        then             
            if [[ -e $obsfile ]]
            then 
                echo "already have tar for $obs not downloading again!" 
                sed -i "/$obs/d" "${basedir}/ready_for_download.txt"
            elif [[ -d "$obs/$obs.ms" ]]
            then 
                echo "There's already a ms here! Not downloading for $obs" 
                sed -i "/$obs/d" "${basedir}/ready_for_download.txt"
            fi
        else 
            if [[ -e $obsfile ]]
            then 
                echo "already have tar for $obs not downloading again!" 
                sed -i "/$obs/d" "${basedir}/ready_for_download.txt"
            fi 
        fi
    done 

    cd $basedir 
    num_ready=$(cat "ready_for_download.txt" | wc -l)
    echo "There are ${num_ready} obsids ready for download. Downloading with giant-squid now!" 

    if [[ ${num_ready} == 0 ]]
    then 
        echo "There are no jobs ready, don't run the giant-squid or it will just download anything that's ready" 
    else
        # TO AVOID IT GETTING CONFUSED IF THERE ARE MUTLIPLE JOBS ASSOCIATED WITH THE OBSID
        singularity run ${GXCONTAINER} giant-squid list --states ready ready_for_download.txt | cut -d "|" -f 2 | tail -n +4  | head -n -1 > ready_for_download_jobid.txt
        # Download just the tar file and untar inside directory below
        singularity run ${GXCONTAINER} giant-squid download -k ready_for_download_jobid.txt 
    fi 

fi 

# -----------------------------------------------------------------------------
# UNTAR OBSIDS AND MAKE NICE DIRECTORY STRUCTURE
# -----------------------------------------------------------------------------

echo "Successfully downloaded all tar files now unzipping and making directories" 
list=()
# list=$(awk '{print substr($1,8,10)}' < "${obslist}_manta.tmp")
list=$(cat ready_for_download.txt)
for obsnum in $list
do 
    cd $basedir 

    obsfile=$(echo "${obsnum}_"[0-9]*"_ms.tar")


    if [[ ! -d "${obsnum}" ]]
    then
        mkdir "${obsnum}"
    fi

    cd $obsnum
    if [[ -d "${obsnum}.ms" ]]
    then
        echo "${obsnum}.ms already exists; please remove directory before running untar job."
    else
        mv "../${obsfile}" ./ 
        tar xf "${obsfile}"
        if [[ $? ]]
        then
            rm "${obsfile}"
        fi
    fi 

done 

